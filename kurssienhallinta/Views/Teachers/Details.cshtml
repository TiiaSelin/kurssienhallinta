@model kurssienhallinta.Models.ViewModels.TeacherScheduleViewModel

@{
    ViewData["Title"] = "Opettajan tiedot";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Teacher.First_name @Model.Teacher.Last_name</h2>

    <div class="mb-4">
        <p><strong>Opettajatunnus:</strong> @Model.Teacher.Teacher_code</p>
        <p><strong>Opetettava aine:</strong> @Model.Teacher.Subject</p>
    </div>

    <h3 class="mb-3">Opettajan kurssit</h3>

    @if (Model.Teacher.Courses.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kurssin nimi</th>
                    <th>Kuvaus</th>
                    <th>Alkamispäivä</th>
                    <th>Päättymispäivä</th>
                    <th>Luokka</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Teacher.Courses)
                {
                    <tr>
                        <td>@course.Name</td>
                        <td>@course.Description</td>
                        <td>@course.Day_of_start.ToShortDateString()</td>
                        <td>@course.Day_of_end.ToShortDateString()</td>
                        <td>@course.Room?.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-info">Opettajalla ei ole vielä kursseja.</p>
    }

    @await Html.PartialAsync("Schedule", Model)

    <a asp-action="List" class="btn btn-secondary mt-3">Takaisin</a>
    
</div>