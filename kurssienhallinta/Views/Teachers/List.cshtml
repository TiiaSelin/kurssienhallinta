@{
    ViewData["Title"] = "Opettajat.";
}
<h1>@ViewData["Title"]</h1>

<p>TÃ¤nne opettajat.</p>

<table class="table">
    <thead>
        <tr>
            <th>Etunimi</th>
            <th>Sukunimi</th>
            <th>Aine</th>
            <th>Tunnus</th>
            <th>Muokkaa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.First_name</td>
                <td>@teacher.Last_name</td>
                <td>@teacher.Subject</td>
                <td>@teacher.Teacher_code</td>
                <td>
                    <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.Id"
                        class="btn btn-sm btn-primary">
                        Muokkaa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>