@model KurssinOpiskelijatViewModel

<div class="container mt-3">
    @{
        ViewData["Title"] = "Kirjautumiset";
    }
    <h1>@ViewData["Title"]</h1>
    <p>TÃ¤nne opiskelijoiden kurssikirjautumiset.</p>
</div>

<div class="subjectContainer">
    <div class="subjectInfo">
        @foreach (var kurssinOpiskelijat in Model.KurssinOpiskelijatList)
        {
            <div class="infoCard">
                <p>Kurssin nimi: @kurssinOpiskelijat.Kurssi.kurssinimi</p>
                <p>Opiskelijat:</p>
                @if (kurssinOpiskelijat.Opiskelijat.Any())
                {
                    @foreach (var opiskelija in kurssinOpiskelijat.Opiskelijat)
                    {
                        <p> @opiskelija.opiskelijatunnus @opiskelija.opiskelijaetunimi @opiskelija.opiskelijasukunimi</p> 
                    }
                }
                else
                {
                    <p><em>Ei kirjautuneita opiskelijoita</em></p>
                }
            </div>
        }
    </div>
    <div class="linkContainer">
        <a class="sidebar-nav" href="@Url.Action("List", "Enrolments")">Lista kurssikirjautumistapahtumista</a>
    </div>
</div>