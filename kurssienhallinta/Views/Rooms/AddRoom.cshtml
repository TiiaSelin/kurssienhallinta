@model AddRoomViewModel

<div class="container mt-5" style="max-width: 700px;">
    <h2 class="mb-4">Lisää tila</h2>

    <form method="post" asp-action="AddRoom">
        <div class=" mb-3">
            <label asp-for="Tila.tilatunnus" class="form-label fw-semibold">Tilatunnus</label>
            <input asp-for="Tila.tilatunnus" class="form-control" />
        </div>

        <div class=" mb-3">
            <label asp-for="Tila.tilanimi" class="form-label fw-semibold">Tilan nimi</label>
            <input asp-for="Tila.tilanimi" class="form-control" />
        </div>

        <div class=" mb-3">
            <label asp-for="Tila.tilakapasiteetti" class="form-label fw-semibold">Tilan kapasiteetti</label>
            <input asp-for="Tila.tilakapasiteetti" type="number" class="form-control"  />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Luo tila
            </button>
            <a asp-controller="Courses" asp-action="List" class="btn btn-secondary ms-2">Peruuta</a>
        </div>
    </form>
</div>