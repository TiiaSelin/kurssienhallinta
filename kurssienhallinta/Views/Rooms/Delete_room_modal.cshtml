@model kurssienhallinta.Models.Room

<div class="modal fade" id="deleteModal-@Model.Id" aria-labelledby="deleteModalLabel-@Model.Id" aria-hidden="true">
  <section class="modal-dialog">
    <div class="modal-content">
      <aside class="modal-header">
        <h4 id="modalTitle-@Model.Id" class="modal-title">Poista tila</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </aside>
      <aside class="modal-body">
        Haluatko poistaa tilan @Model.Name?
      </aside>
      <aside class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Peruuta
        </button>
        <form asp-action="Delete_room" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Poista</button>
        </form>
      </aside>
    </div>
  </section>
</div>
