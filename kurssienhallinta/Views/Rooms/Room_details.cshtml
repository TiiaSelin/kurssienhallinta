@model kurssienhallinta.Models.Room

@{
    ViewData["Title"] = "Tilan tiedot";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Name </h2>
    
    <div class="mb-4">
        <p><strong>Tilan nimi:</strong> @Model.Name</p>
        <p><strong>Tilan kapasiteetti:</strong> @Model.Capacity</p>
        <p><strong>Tilan tunnus:</strong> @Model.Room_code</p>
    </div>

    <h3 class="mb-3">Tilassa pidettävät kurssit</h3>

    @if (Model.Courses.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kurssin nimi</th>
                    <th>Kuvaus</th>
                    <th>Alkamispäivä</th>
                    <th>Päättymispäivä</th>
                    <th>Opettaja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.Name</td>
                        <td>@course.Description</td>
                        <td>@course.Day_of_start.ToShortDateString()</td>
                        <td>@course.Day_of_end.ToShortDateString()</td>
                        <td>@(course.Teacher?.FullName ?? "Ei opettajaa.")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-info">Tilassa ei ole kursseja.</p>
    }

    <a asp-action="List_rooms" class="btn btn-secondary mt-3">Takaisin</a>
</div>