@model kurssienhallinta.Models.Room
@{
    ViewData["Title"] = "Muokkaa tilaa.";
}
<div class="container mt-5" style="max-width: 700px;">
<h2 class="mb-4">Muokkaa tilaa @Model.Name.</h2>

<form asp-action="Edit_room" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-semibold">Tilan nimi.</label>
        <input asp-for="Name" type="text" class="form-control" rows="3">
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label fw-semibold">Tilan kapasiteetti.</label>
        <input asp-for="Capacity" type="number" class="form-control" rows="3">
    </div>

    <div class="mb-3">
        <label asp-for="Room_code" class="form-label fw-semibold">Tilan tunnus.</label>
        <input asp-for="Room_code" type="text" class="form-control" rows="3">
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>Tallenna tila
        </button>
        <a asp-action="List_rooms" class="btn btn-secondary ms-2">Peruuta</a>
    </div>
</form>
</div>
