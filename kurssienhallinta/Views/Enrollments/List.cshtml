@model IEnumerable<kurssienhallinta.Models.Enrollment>

@{
    ViewData["Title"] = "Ilmoittautumiset";
}

<div class="container mt-5">
    <h2 class="mb-4">Ilmoittautumiset</h2>
    
    <a asp-action="Add_enrollment" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Lis채채 uusi ilmoittautuminen
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Opiskelijan tunnus</th>
                <th>Opiskelijan nimi</th>
                <th>Kurssin nimi</th>
                <th>Ilmoittautumisp채iv채</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Id</td>
                    <td>@enrollment.Student.Student_code</td>
                    <td>@enrollment.Student.F_Name @enrollment.Student.L_Name</td>
                    <td>@enrollment.Course.Name</td>
                    <td>@enrollment.EnrollmentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>