@model kurssienhallinta.Models.Enrollment

@{
    ViewData["Title"] = "Lisää ilmoittautuminen";
}

<div class="container mt-5" style="max-width: 700px;">
    <h2 class="mb-4">Lisää uusi ilmoittautuminen</h2>
    <p>Täytä alla olevat tiedot lisätäksesi uuden ilmoittautumisen järjestelmään.</p>

    <form asp-action="Add_enrollment" method="post">
        <div class="mb-3">
            <label asp-for="StudentId" class="form-label fw-semibold">Opiskelija</label>
            <select asp-for="StudentId" class="form-control">
                <option value="0">-- Valitse opiskelija --</option>
                @foreach (var student in (SelectList)ViewBag.Students)
                {
                    <option value="@student.Value">@student.Text</option>
                }
            </select>
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CourseId" class="form-label fw-semibold">Kurssi</label>
            <select asp-for="CourseId" class="form-control">
                <option value="">-- Valitse kurssi --</option>
                @foreach (var course in (SelectList)ViewBag.Courses)
                {
                    <option value="@course.Value">@course.Text</option>
                }
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EnrollmentDate" class="form-label fw-semibold">Ilmoittautumispäivä</label>
            <input asp-for="EnrollmentDate" type="date" class="form-control" />
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Lisää ilmoittautuminen
            </button>
            <a asp-action="List" class="btn btn-secondary ms-2">Peruuta</a>
        </div>
    </form>
</div>