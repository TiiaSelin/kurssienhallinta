@model kurssienhallinta.Models.ViewModels.StudentScheduleViewModel

@{
    ViewData["Title"] = "Opiskelijan tiedot";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Student.F_Name @Model.Student.L_Name</h2>

    <div class="mb-4">
        <p><strong>Opiskelijatunnus:</strong> @Model.Student.Student_code</p>
        <p><strong>Syntymäpäivä:</strong> @Model.Student.Birthday.ToShortDateString()</p>
        <p><strong>Vuosikurssi:</strong> @Model.Student.Year</p>
    </div>

    <h3 class="mb-3">Opiskelijan kurssit</h3>

    @if (Model.Student.Enrollments.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kurssin nimi</th>
                    <th>Opettaja</th>
                    <th>Tila</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Student.Enrollments)
                {
                    <tr>
                        <td>@e.Course.Name</td>
                        <td>@(e.Course.Teacher?.FullName ?? "Ei opettajaa")</td>
                        <td>@(e.Course.Room?.Name ?? "Ei tilaa")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-info">Opiskelija ei ole ilmoittautunut kursseille.</p>
    }

    @await Html.PartialAsync("Schedule", Model)

    <a asp-action="List" class="btn btn-secondary mt-3">Takaisin</a>
</div>