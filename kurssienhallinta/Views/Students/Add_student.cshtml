@model kurssienhallinta.Models.Student

@{
    ViewData["Title"] = "Lisää opiskelija.";
}

<div class="container mt-5" style="max-width: 700px;">
    <h2 class="mb-4">Lisää uusi opiskelija.</h2>
    <p>Täytä alla olevat tiedot lisätäksesi uuden opiskelijan järjestelmään.</p>

    <form asp-action="Add_student" method="post">
        <div class="mb-3">
            <label asp-for="Student_code" class="form-label fw-semibold">Opiskelijanumero</label>
            <input asp-for="Student_code" class="form-control" />
            <span asp-validation-for="Student_code" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <section class="col">
                <label asp-for="F_Name" class="form-label fw-semibold">Opiskelijan etunimi</label>
                <input asp-for="F_Name" class="form-control" />
                <span asp-validation-for="F_Name" class="text-danger"></span>
            </section>

            <section class="col">
                <label asp-for="L_Name" class="form-label fw-semibold">Opiskelijan sukunimi</label>
                <input asp-for="L_Name" class="form-control" />
                <span asp-validation-for="L_Name" class="text-danger"></span>
            </section>
        </div>

        <div class="mb-3">
            <label asp-for="Birthday" class="form-label fw-semibold">Opiskelijan syntymäpäivä</label>
            <input asp-for="Birthday" type="date" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label fw-semibold">Opiskelijan vuosikurssi</label>
            <select asp-for="Year" class="form-select">
                <option selected disabled value="">Valitse vuosikurssi.</option>
                <option value="1">1.</option>
                <option value="2">2.</option>
                <option value="3">3.</option>
            </select>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Lisää opiskelija
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">Peruuta</a>
        </div>
    </form>
</div>