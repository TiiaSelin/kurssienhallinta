<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kurssienhallinta</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kurssienhallinta.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow-sm mb-3" style="background-color: #555555;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Kurssienhallinta
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                Kotisivu
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="coursesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Kurssit
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" style="background-color: #3d3d3d;">
                                <li><a class=" dropdown-item" asp-controller="Courses" asp-action="Add_course">Lisää
                                        kurssi</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Courses"
                                        asp-action="List_courses">Kurssit</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">
                                Tilat
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" style=" background-color: #3d3d3d;">
                                <li><a class="dropdown-item" asp-controller="Rooms" asp-action="Add_room">Lisää tila</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Rooms" asp-action="List_rooms">Tilat</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">
                                Opiskelijat
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" style=" background-color: #3d3d3d;">
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Add_student">Lisää
                                        opiskelija</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="List">Opiskelijat</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">
                                Opettajat
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" style=" background-color: #3d3d3d;">
                                <li><a class="dropdown-item" asp-controller="Teachers" asp-action="Add_teacher">Lisää
                                        opettaja</a></li>
                                <li><a class="dropdown-item" asp-controller="Teachers" asp-action="List">Opettajat</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">
                                Kurssikirjautumiset
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" style=" background-color: #3d3d3d;">
                                <li><a class="dropdown-item" asp-controller="Enrollments"
                                        asp-action="Add_enrollment">Lisää
                                        kirjautuminen</a></li>
                                <li><a class="dropdown-item" asp-controller="Enrollments"
                                        asp-action="List">Kurssikirjautumiset</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white">
        <div class="container">
            &copy; 2025 - kurssienhallinta.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>